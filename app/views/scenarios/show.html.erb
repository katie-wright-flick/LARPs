<p id="notice"><%= notice %></p>
<h1><%= @scenario.name %></h1>
<hr/>

<p>
  <strong>Location:</strong>
  <%= @scenario.location %>
</p>

<p>
  <strong>Active:</strong>
  <%= @scenario.active %>
</p>

<p>
  <strong>Players:</strong>
  <%= @scenario.players %>
</p>

<p>
  <strong>Starts at:</strong>
  <%= @scenario.starts_at %>
</p>

<h2><strong>Characters</strong></h2>
<ul class="list">
  <% @scenario.characters.each do |character| %>
    <li class="list_item <%= character.creature_class %>"><%= link_to character.name, character_path(character.id) %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_scenario_path(@scenario) %> |
<%= link_to 'Back', scenarios_path %>
